<div class="container">
 <table class="table table-striped table-dark table-hover text-center">
    <thead>
      <tr>
        <th>FIRSTNAME</th>
        <th>LASTNAME</th>
        <th>EMAIL</th>
        <th>ACTION</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
      <tr>
        <td>{{this.first_name}}</td></a>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>
          <a class="table-row text-primary" data-href="/customers/{{this.id}}">Click to see details</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
$(document).ready(function($) {
    $(".table-row").click(function() {
        window.document.location = $(this).data("href");
    });
});
</script>
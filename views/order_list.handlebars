<div class="container">
 <table class="table table-striped table-dark table-hover text-center">
    <thead>
      <tr>
        <th>FIRSTNAME</th>
        <th>LASTNAME</th>
        <th>EMAIL</th>
        <th>PRODUCT</th>
        <th>QUANTITY</th>
        <th>ORDER DATE</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
      <tr>
        <td>{{this.fname}}</td>
        <td>{{this.lname}}</td>
        <td>{{this.email}}</td>
        <td>{{this.product}}</td>
        <td >{{this.qty}}</td>
        <td id = "date"></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
  var today = new Date('Mon Aug 13 2018 04:15:09 GMT+0000 (UTC)');
var date = today.setHours(today.getHours() + 8);
document.getElementById("date").innerText = today.toString() ;
</script>
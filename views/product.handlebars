<!--BODY-->
<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-11 col-sm-11 col-xs-11 mr-sm-3 mb-3 p-1 bg-dark overflow-hidden" style="color: #abb; border-radius: 5px; box-shadow: 4px 4px #112;">
      <div>
        <div class="container">
          <div class="row">
            <div class="col-sm-7">
              <div class="mx-auto view overlay" style="width: 80%; border-radius: 0 0 20px 0"><br>
                <img type="button" data-toggle="modal" data-target="#product_image" style="width:100%; border-radius: 0 0 20px 0" src="{{img}}" class="img-fluid" alt="">
              </div><br>
            </div>
            <div class="col-sm-5">
              <ul style="display: inline; text-decoration: none">
                <li>Name: <i>{{name}}</i></li>
                <li>Description: <i>{{description}}</i></li>
                <li>Tagline: <i>{{tagline}}</i></li>
                <li>Price: <i>{{price}}</i></li>
                <li>Warranty: <i>{{warranty}}</i></li>
                <li>Brand name: <i>{{brandname}}</i></li>
                <li>Brand Description: <i>{{branddesc}}</i></li>
                <li>Category: <i>{{category}}</i></li>
              </ul><hr style="background-color: #66686b">
              <div class="pull-down" style="margin-bottom: 15px; margin-right: 10px">
                <a href="/product/update/{{this.id}}"><button type="button" class="btn btn-primary" data-toggle="modal"><i class="fa fa-cart-plus" style="font-size:15px;"></i>&nbsp;&nbsp;Update</button></a>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#customer_details"><i class="fa fa-cart-plus" style="font-size:15px;"></i>&nbsp;&nbsp;Add</button>

              </div>
            </div>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>

<!--MODAL-FORM-->
<div class="modal fade" id="customer_details" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post" action="/send-email">
            Customer Name:
            <div class="form-group">
              <input type="name" class="form-control" id="name" placeholder="Enter Your Name" name="name">
            </div>
          
            Phone: <br>
            <div class="form-group">
              <input type="tel" class="form-control" id="no" placeholder="Enter Contact Number" name="phone">
            </div>

            Quantity: <br>
            <div class="form-group">
              <input type="number" class="form-control" id="number" placeholder="Enter Quantity" name="qty">
            </div>

            Product ID: <br>
            <div class="form-group">
              <input type="number" class="form-control" id="id" placeholder="Enter Product ID" name="id" >
            </div>

             Email: <br>
            <div class="form-group">
              <input type="email" class="form-control" id="email" placeholder="Enter Email" nafme="email" >
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-success pull-right"><i class="fas fa-paper-plane" style="font-size:15px"></i>&nbsp;&nbsp;Submit</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--MODAL-IMAGE-->
<div class="modal fade" id="product_image" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content" style="width:95%;">
      <img style="width:100%;" src="{{img}}">
    </div>
  </div>
</div>

<!--FOR SHOW-MODAL-->
<script type="text/javascript">
$('#customer_details').on('show.bs.modal', function (event) {
  var modal = $(this)
  modal.find('.modal-title').text('{{name}}')
})
</script>
<div class="container-fluid">
  <div class="row">
    {{> header_admin }}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <h2 class="white-text">Customers</h2><hr>
      <div class="container">
       <table class="table table-striped table-dark table-hover text-center">
          <thead>
            <tr>
              <th>FIRSTNAME</th>
              <th>LASTNAME</th>
              <th>EMAIL</th>
              <th>ACTION</th>
            </tr>
          </thead>
          <tbody>
            {{#each rows}}
            <tr>
              <td>{{this.first_name}}</td></a>
              <td>{{this.last_name}}</td>
              <td>{{this.email}}</td>
              <td>
                <a class="table-row text-primary" data-href="/admin/customers/{{this.id}}">Click to see details</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <script>
      $(document).ready(function($) {
          $(".table-row").click(function() {
              window.document.location = $(this).data("href");
          });
      });
      </script>
    </main>
  </div>
</div>
